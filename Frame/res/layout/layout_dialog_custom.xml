<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/background_dialog_custom"
        android:orientation="vertical"
        android:paddingLeft="25dp"
        android:paddingRight="25dp" >

        <LinearLayout
            android:id="@+id/dialog_custom_img_layout"
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/dialog_custom_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5.5dp"
                android:src="@drawable/dialog_custom_icon_success" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/dialog_custom_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#464646"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/dialog_custom_tv_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="@color/color_999999"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/dialog_custom_edit_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:visibility="gone" >

            <EditText
                android:id="@+id/dialog_custom_edit"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="9dp"
                android:background="@drawable/input_underline_red" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dialog_custom_btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="11.5dp"
                android:layout_marginTop="7.5dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/dialog_custom_btn_negative"
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_dialog_custom_btn_no"
                    android:gravity="center"
                    android:text="取消"
                    android:textColor="#686868"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/dialog_custom_btn_positive"
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7.5dp"
                    android:background="@drawable/background_dialog_custom_btn_yes"
                    android:gravity="center"
                    android:text="确认"
                    android:textColor="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_custom_btn_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/dialog_custom_icon_delete"
        android:visibility="gone" />

</RelativeLayout>